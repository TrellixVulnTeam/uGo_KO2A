<div class="container">
  <div class="row-fluid">
    <div class="header">
      <%= link_to root_path do %>
        <%= image_tag "header.png", id:"header-logo" %>
      <% end %>        
      <div class="header-link">
        <%= link_to'Logout', destroy_user_session_path, :method => :delete, class: 'btn btn-primary'  %>   
      </div>
    </div>
  </div>
  <div class="row-fluid new-application">
    <h1 class="page-title">New Application</h1>
    <%= form_for :application do |f| %>
      <% if @application.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@application.errors.count, "error") %> prohibited this article from being saved:
          </h2>
          <ul>
            <% @application.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="create-app-form-left col-md-4 col-md-offset-2">
        <div>
          <%= f.label :conference_name %><br>
          <%= f.text_field :conference_name, class:'text-field' %>
        </div>
        <div>
          <%= f.label :conference_date %><br>
          <%= f.date_field :conference_date, class:'text-field' %>
        </div>
        <div>
          <%= f.label :conference_location %><br>
          <%= f.text_field :conference_location, class:'text-field' %>
        </div>
      </div>
      <div class="create-app-form-right col-md-6 col-md-pull-1">
        <div>
          <%= f.label :registration_cost %><br>
          <div class="amount-input">
            <span class="input-group-addon">$</span>
            <%= f.number_field(:registration_cost, in: 0.0..10000.0, :step => 0.01) %>
          </div>
        </div>
        <div>
          <%= f.label :transportation_cost %><br>
          <div class="amount-input">
            <span class="input-group-addon">$</span>
            <%= f.number_field(:transportation_cost, in: 0.0..10000.0, :step => 0.01) %>
          </div>
        </div>
        <div>
          <%= f.label :accomodation_cost %><br>
          <div class="amount-input">
            <span class="input-group-addon">$</span>
            <%= f.number_field(:accomodation_cost, in: 0.0..10000.0, :step => 0.01) %>
          </div>
        </div>
        <div>
          <%= f.label :meals_cost %><br>
          <div class="amount-input">
            <span class="input-group-addon">$</span>
            <%= f.number_field(:meals_cost, in: 0.0..10000.0, :step => 0.01) %>
          </div>
        </div>
      </div>
      <%= f.hidden_field :requester_id, value: session[:user_id] %>
      <p>
        <%= f.submit "Submit", class:' btn btn-primary done' %>
      </p>
    <% end %>
  </div>
</div>

