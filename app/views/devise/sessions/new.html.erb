<div class="container">
  <div class="row-fluid">
    <div class="header">

        <%= link_to root_path do %>
          <%= image_tag "header.png", id:"header-logo" %>
        <% end %>


        
        
        <div class="header-link">
          <%= render "devise/shared/links" %>
        </div>


    </div>
  </div>



  <div class="row-fluid">

    <div class="log-in">






      <h1 class="page-title">Log in</h1>


      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: 'text-field'  %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, class:'text-field', autocomplete: "off" %>
        </div>



        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />




        <div class="actions">
          <%= f.submit "I'm back", class: 'btn btn-primary done' %>
        </div>

      <% end %>

      


    </div>
  </div>
</div>



