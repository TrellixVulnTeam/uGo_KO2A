<%= devise_error_messages! %>
<div class="container">
  <div class="row-fluid">
    <div class="header">

        <%= link_to root_path do %>
          <%= image_tag "header.png", id:"header-logo" %>
        <% end %>        



    
        <div class="header-link">
        <%= render "devise/shared/links" %>
        </div>


    </div>
  </div>



  <div class="row-fluid">

    <div class="sign-up">


      <h1 class="page-title">Sign up</h1>



      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="col-md-4 col-md-offset-2">


        <div class="field">
          <%= f.label :given_name %><br />
          <%= f.text_field :given_name, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :last_name %><br/>
          <%= f.text_field :last_name, autofocus: true %>
        </div>


        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email %>
        </div>

        <div class="field">
          <%= f.label :student_number %><br />
          <%= f.text_field :student_number%>
        </div>


        <div class="field">
         <%= f.label :bank_account_number %><br />
         <%= f.text_field :bank_account_number%>
        </div>

        <div class="field">
         <%= f.label :program_of_study %><br />
         <%= f.text_field :program_of_study%>
        </div>
      </div>


      <div class="col-md-6 col-md-pull-1">

        <div class="field">
         <%= f.label :thesis_topic %><br />
         <%= f.text_field :thesis_topic%>
        </div>

        <div class="field">
         <%= f.label :session_number %><br />
         <%= f.text_field :session_number%>
        </div>

        <div class="field">
         <%= f.label :supervisor %><br />
         <%= f.text_field :supervisor%>
        </div>

        <div class="field">
         <%= f.label :academic_unit %><br />
         <%= f.text_field :academic_unit%>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>

        <div class="actions">
          <%= f.submit "Let's go!", class: 'sign-up-done btn btn-primary done' %>
        </div>

      <% end %>
      


    </div>
  </div>
</div>

